<h2>Your Cart</h2>
<div class="break"></div>

<div class="line_item_display">
  <%= render(@cart.line_items) %>
</div>

<div class="break"></div>

<div class="total_row">
  <div class="total_label">Total</div>
  <div class="total_val"><%= number_to_currency(@cart.total_price) %></div>
</div>

<div class="break"></div>

<div class="cart_button">
  <%= button_to 'Checkout', new_order_path, method: :get, remote: true %>
</div>

<div class="cart_button">
  <%= button_to 'Empty Cart', @cart, method: :delete, data: {confirm: 'Are you sure?'}, remote: true%>  
</div>