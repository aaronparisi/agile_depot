<div class="entry">
  <%= link_to image_tag(product.image_url), line_items_path(product_id: product.id, dir: :inc), method: :post, remote: true %>
  <h3><%= product.title %></h3>
  <%= sanitize(product.description) %>
  <div class="price_line">
    <span class="price"><%= number_to_currency product.price, unit: "R$" %></span>
    <%= button_to 'Add To Cart', line_items_path(product_id: product.id, dir: :inc), remote: true %>
  </div>
</div>